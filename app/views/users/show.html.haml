%section#profile-page
  .profile-wrap
    .tabs
      %h3.profile-tab
        %a.active{:id =>"profile-tab-content"} Profile
      %h3.game-stats-tab
        %a{:id => "game-stats-tab-content"} Game Stats
      %h3.account-tab
        %a{:id => "account-tab-content"} Account
    .tabs-content
      #profile-tab-content.active
        .profile-text
          .title-container
            %h3 Name:
          .info-container
            %p
              = @user.name
        .profile-image
          %img.house-crest{:src => asset_path("gryffindor_crest.png")}

      #game-stats-tab-content
        .title-container
          %h3 Current Score:
        .info-container
          %p 0
        .title-container
          %h3 Current Level:
        .info-container
          %p Level 1
        .title-container
          %h3 Horcruxes Found:
        .info-container
          %p None yet. Keep searching!


      #account-tab-content
        .title-container
          %h3 Name:
        .info-container
          %p
            = @user.name
        .title-container
          %h3 Email:
        .info-container
          %p
            = @user.email



=javascript_include_tag "vendor.min"
=javascript_include_tag "profile"
