$image-path: '../images/';
$font-path: '../fonts/';
$hogwarts-boats: url("<%= asset_path('hogwarts-boats.jpg')%>");
$hogwarts-gray: #100E1B;
$hogwarts-gold: rgb(100,100,0);
$subtle-background: url("<%= asset_path('subtle-noise.png')%>");
$full-background: url("<%= asset_path('background-sprite.png')%>");
$default-radius: 5px;
$large-radius: 20px;

@font-face {
  font-family: Potter;
  src: url("<%= asset_path('HARRYP__.TTF')%>");
}
@font-face {
  font-family: PCSenior;
  src: url("<%= asset_path('pcsenior.ttf')%>");
}



section {
  height: 100vh;
  width: 100vw;
  background: $hogwarts-gray $hogwarts-boats no-repeat fixed center center;
  background-size: 100% 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.game-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 500px;
  width: 700px;
  border: 6px solid black;
  border-radius: $default-radius;
  box-shadow: 10px 10px 50px white;
  overflow: hidden;

  .menu {
    display: none;
    z-index: 10;
    position: absolute;
    top: 0;
    left: 0;
    height: 30px;
    width: 100%;
    background: white;
    border: 3px solid black;
    font-family: PCSenior;
    font-size: 15px;
    box-sizing: border-box;
    .options {
      display: flex;
      list-style: none;
      height: 100%;
      .option {
        display: flex;
        align-items: center;
        padding-left: 10px;
        height: 100%;
        &.fileOption {
          position: relative;
          width: 15%;
          overflow: hidden;
          .fileOptions {
            position: absolute;
            width: 120%;
            top: 100%;
            left: 0;
            list-style: none;
            li {
              display: flex;
              align-items: center;
              padding-left: 10px;
              height: 30px;
              background: white;
              color: black;
              &:hover, &.active {
                background: black;
                color: white;
              }
            }
          }
        }
        &.invOption {
          width: 25%;
        }
        &.scoreOption {
          width: 35%;
        }
        &.timeOption {
          width: 25%;
        }
        &.active, &:hover {
          background: black;
          color: white;
          overflow: visible;
        }
      }
    }
  }

  .startBtn {
    padding: 20px;
    font-family: Potter;
    background: black;
    color: $hogwarts-gold;
    font-size: 40px;
    border: 3px solid $hogwarts-gold;
    border-radius: $large-radius;
    cursor: pointer;
    outline-style: none;
  }

  .typing, .dialog, .inventory {
    z-index: 10;
    display: none;
    padding: 10px;
    font-family: PCSenior;
    background: white;
    color: black;
    font-size: 20px;
    border: 3px solid black;
    border-radius: 0;
    outline-style: none;
    max-width: 80%;
    max-height: 70%;
    overflow: scroll;
    &.inventory {
      width: 50%;
      height: 80%;
    }
  }
}

.save-game-form {
  display: none;
}
