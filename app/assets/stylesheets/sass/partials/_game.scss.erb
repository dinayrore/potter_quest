$image-path: '../images/';
$font-path: '../fonts/';
$hogwarts-boats: url("<%= asset_path('hogwarts-boats.jpg')%>");
$hogwarts-gray: #100E1B;
$hogwarts-gold: rgb(100,100,0);
$subtle-background: url("<%= asset_path('subtle-noise.png')%>");
$full-background: url("<%= asset_path('background-sprite.png')%>");
$default-radius: 5px;
$large-radius: 20px;

@font-face {
  font-family: Potter;
  src: url("<%= asset_path('HARRYP__.TTF')%>");
}
@font-face {
  font-family: PCSenior;
  src: url("<%= asset_path('pcsenior.ttf')%>");
}



section {
  height: 100vh;
  width: 100vw;
  background: $hogwarts-gray $hogwarts-boats no-repeat fixed center center;
  background-size: 100% 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.game-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 500px;
  width: 700px;
  border: 6px solid black;
  border-radius: $default-radius;
  box-shadow: 10px 10px 50px white;
  overflow: hidden;

  .startBtn {
    padding: 20px;
    font-family: Potter;
    background: black;
    color: $hogwarts-gold;
    font-size: 40px;
    border: 3px solid $hogwarts-gold;
    border-radius: $large-radius;
    cursor: pointer;
    outline-style: none;
  }

  .typing, .dialog {
    z-index: 10;
    display: none;
    padding: 10px;
    font-family: PCSenior;
    background: white;
    color: black;
    font-size: 20px;
    border: 3px solid black;
    border-radius: 0;
    outline-style: none;
    max-width: 80%;
    max-height: 70%;
    overflow: scroll;
  }
}
